            <GradientStop Color="#AD4E83" Offset="0.1"/>
            <GradientStop Color="#801637" Offset="0.5"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Content >
        <StackLayout VerticalOptions="Center" Margin="38">

            <Frame x:Name="DadosUsuario" VerticalOptions="Start"
                   Padding="55"
                   HasShadow="True"                 
